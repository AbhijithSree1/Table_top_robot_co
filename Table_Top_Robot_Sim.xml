<mujoco model="four_wheel_base">
	<option timestep="0.001" gravity="0 0 -9.81"/>

	<worldbody>
		<geom name="floor" type="plane" size="10 10 0.1" rgba="0.7 0.7 0.7 1"
			friction="1.0 0.01 0.001"/>

		<!-- table -->
		<body name="table" pos="0 0 2">
		<geom name="table_top" type="box" size="2 2 2" rgba="0.9 0.2 0.2 1"
				friction="1.0 0.01 0.001"/>
		</body>

		<!-- 4-wheel robot -->
		<body name="car" pos="4 0 4.25">
		<freejoint name="chassis_free"/>

		<!-- robot chassis -->
		<geom name="chassis" type="box" size="0.6 0.4 0.1" pos="0 0 0.20"
				mass="20" rgba="0.2 0.6 0.2 1"/>

		<site name="chassis_site" pos="0 0 0" size="0.01"/>

		<!-- wheel params -->
		<!-- wheel radius=0.25, wheel width half=0.05 wheel mass=2-->
		<!-- Track length 0.9, wheelbase 0.7 -->

		<body name="wheel_fl" pos=" 0.45  0.35 0">
			<joint name="j_fl" type="hinge" axis="0 1 0" limited="false"/>
			<geom name="g_fl" type="cylinder" size="0.25 0.05" euler="90 0 0"
				mass="2" friction="1 0.01 0.001" rgba="0.1 0.1 0.1 1"/>
		</body>

		<body name="wheel_fr" pos=" 0.45 -0.35 0">
			<joint name="j_fr" type="hinge" axis="0 1 0" limited="false"/>
			<geom name="g_fr" type="cylinder" size="0.25 0.05" euler="90 0 0"
				mass="2" friction="1 0.01 0.001" rgba="0.1 0.1 0.1 1"/>
		</body>

		<body name="wheel_rl" pos="-0.45  0.35 0">
			<joint name="j_rl" type="hinge" axis="0 1 0" limited="false"/>
			<geom name="g_rl" type="cylinder" size="0.25 0.05" euler="90 0 0"
				mass="2" friction="1 0.01 0.001" rgba="0.1 0.1 0.1 1"/>
		</body>

		<body name="wheel_rr" pos="-0.45 -0.35 0">
			<joint name="j_rr" type="hinge" axis="0 1 0" limited="false"/>
			<geom name="g_rr" type="cylinder" size="0.25 0.05" euler="90 0 0"
				mass="2" friction="1 0.01 0.001" rgba="0.1 0.1 0.1 1"/>
		</body>
		</body>
	</worldbody>

  <!-- Actuators: pick ONE style -->
	<actuator>
		<!-- A) Torque motors (Nm) -->
		<motor  name="m_fl" joint="j_fl" gear="100" ctrlrange="-1 1"/>
		<motor  name="m_fr" joint="j_fr" gear="100" ctrlrange="-1 1"/>
		<motor  name="m_rl" joint="j_rl" gear="100" ctrlrange="-1 1"/>
		<motor  name="m_rr" joint="j_rr" gear="100" ctrlrange="-1 1"/>
	</actuator>
	
	<!-- Sensors -->
	<sensor>
		<!-- Chassis pose (world frame) -->
		<framepos  name="chassis_pos"  objtype="site" objname="chassis_site"/>
		<framequat name="chassis_quat" objtype="site" objname="chassis_site"/>

		<!-- Easy sanity checks: wheel angular speeds -->
		<jointvel name="w_fl" joint="j_fl"/>
		<jointvel name="w_fr" joint="j_fr"/>
		<jointvel name="w_rl" joint="j_rl"/>
		<jointvel name="w_rr" joint="j_rr"/>
	</sensor>
  
</mujoco>
